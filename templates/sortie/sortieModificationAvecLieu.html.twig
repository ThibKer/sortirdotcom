{% extends 'base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/modification.css') }}.css">
{% endblock %}

{% block body %}

    <form method="post" class="pure-form pure-form-aligned centred-conteneur" id="formulaire-modifier">
        <fieldset class="pure-g">
            <div class="pure-g">
                <div class="pure-u-1-2">
                    <div class="creation-champs pure-control-group">
                        {{ form_row(formUpdate.nom, { 'label': 'Nom de la sortie' }) }}
                    </div>
                    <div class="creation-champs pure-control-group">
                        {{ form_row(formUpdate.dateHeureDebut) }}
                    </div>
                    <div class="creation-champs pure-control-group">
                        {{ form_row(formUpdate.dateLimiteInscription) }}
                    </div>
                    <div class="creation-champs pure-control-group">
                        {{ form_row(formUpdate.duree) }}
                    </div>
                    <div class="creation-champs pure-control-group">
                        {{ form_row(formUpdate.nbInscriptionMax) }}
                    </div>
                    <div class="creation-champs pure-control-group">
                        {{ form_row(formUpdate.infosSortie) }}
                    </div>
                </div>
                <div class="pure-u-1-2">
                    <div class="creation-champs pure-control-group" id="select-creation">
                        <div class="creation-champs pure-control-group" id="select-creation">
                            {{ form_row(formLieu) }}
                        </div>
                        <div>
                            <a href="{{ path('sortie_modifier', {"id" : sortie.id}) }}">
                                <img src="{{ asset('img/dash-circle.svg') }}">
                            </a>
                        </div>
                        <div class="creation-champs pure-control-group">
                            {{ form_row(formUpdate.site) }}
                        </div>
                        {{ form_rest(formUpdate) }}
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
    <div class="centred-conteneur">
        <div class="pure-controls">
            <button class="pure-button button-primary" type="submit" id="submit-modifier">Modifier</button>
            <a class="pure-button button-primary" href="{{ path('sortie_publication', {"id" : sortie.id}) }}">Publier la
                sortie</a>
            <a class="pure-button button-primary" href="{{ path('sortie_suppression', {"id" : sortie.id}) }}">Supprimer
                la sortie</a>
            <a class="pure-button button-primary" href="{{ path('home') }}">Annuler</a>
        </div>
    </div>
    <script src="{{ asset('js/modification.js') }}"></script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Détails d'une sortie{% endblock %}

{% block body %}
    <div class="pure-form pure-form-aligned"
          style="	position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
    ">
        <fieldset>
            <legend>Détail de la sortie</legend>
            <div class="example-wrapper pure-g">
                <div class="pure-u-1-2">
                    <div class="creation-champs pure-control-group">
                        <label>Nom de la sortie</label>
                        <input class="displayer" disabled value="{{ sortie.nom }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Date et heure de la sortie</label>
                        <input class="displayer" disabled value="{{ sortie.dateHeureDebut | date('d/m/Y H:i') }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Date limite d'inscription</label>
                        <input class="displayer" disabled value="{{ sortie.dateLimiteInscription | date('d/m/Y H:i') }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Nombre de place</label>
                        <input class="displayer" disabled value="{{ sortie.nbInscriptionMax }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Durée</label>
                        <input class="displayer" disabled value="{{ sortie.duree }} minutes">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Description et infos</label>
                        <input class="displayer" disabled value="{{ sortie.infosSortie }}">
                    </div>
                </div>
                <div class="pure-u-1-2">
                    <div class="creation-champs pure-control-group">
                        <label>Ville oragnisatrice</label>
                        <input class="displayer" disabled value="{{ sortie.lieu.ville.nom }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Lieu</label>
                        <input class="displayer" disabled value="{{ sortie.lieu.nom }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Rue</label>
                        <input class="displayer" disabled value="{{ sortie.lieu.rue }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Code postal</label>
                        <input class="displayer" disabled value="{{ sortie.lieu.ville.codePostal }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Latitude</label>
                        <input class="displayer" disabled value="{{ sortie.lieu.latitude }}">
                    </div>
                    <div class="creation-champs pure-control-group">
                        <label>Longitude</label>
                        <input class="displayer" disabled value="{{ sortie.lieu.longitude }}">
                    </div>
                </div>
            </div>
        </fieldset>
        <table class="pure-table detail-table">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Detail</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ sortie.organisateur.getPseudo() }}</td>
                    <td>{{ sortie.organisateur.getPrenom() }} {{ sortie.organisateur.getNom() }}</td>
                    <td><a class="pure-button button-secondary" href={{ path("participant_show",{"id":sortie.organisateur.getId()}) }}>Profil</a></td>
                </tr>
                {%  for participant in participants %}
                <tr>
                    <td>{{ participant.pseudo }}</td>
                    <td>{{ participant.prenom }} {{ participant.nom }}</td>
                    <td><a class="pure-button button-primary" href={{ path("participant_show",{"id":participant.id}) }}>Profil</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

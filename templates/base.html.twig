<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pure/2.0.6/pure-min.css"
          integrity="sha512-/VectwrK3cVMbl6IFsHj/O+fbxfLQm5rved2LR8HnaNuIL6fs8yBXNSi25hhQCB2713sc3Cbh5a4wLRSsZvDxg=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link href="{{ asset('css/main.css') }}" rel="stylesheet">
</head>

<body>
<div class="pure-menu pure-menu-horizontal menu-bordereau">
    <div class="pure-g">
        <div class="pure-u-1-3">
            <a href="{{ path('home') }}"><img src="{{ asset('img/logo.png') }}" id="base-logo"></a>
        </div>
        <div class="pure-menu-list pure-u-1-3 base-titre">
            <h1>Sortie.com</h1>
        </div>
        {% if app.user %}
            <ul class="pure-menu-list pure-u-1-3" id="base-button">
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="pure-menu-item">
                        <a href="{{ path('ville') }}" class="pure-menu-link">Villes</a>
                    </li>
                    <li class="pure-menu-item">
                        <a href="{{ path('site') }}" class="pure-menu-link">Sites</a>
                    </li>
                {% endif %}
                <li class="pure-menu-item">
                    <a href="{{ path('home') }}" class="pure-menu-link">Accueil</a>
                </li>
                <li class="pure-menu-item">
                    <a href="{{ path('participant_edit', {"id" : app.user.id}) }}" class="pure-menu-link">Mon profil</a>
                </li>
                <li class="pure-menu-item">
                    <a href="{{ path('app_logout') }}" class="pure-menu-link">Se d√©connecter</a>
                </li>
            </ul>
        {% endif %}
    </div>
</div>
{% block body %}

{% endblock %}
</body>
<script src="{{ asset('js/error.js') }}"></script>
{% if error is defined %}
    <script>
        errorAlert('{{ error }}');
    </script>
{% endif %}
</html>

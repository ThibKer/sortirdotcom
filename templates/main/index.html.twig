{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/home.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <main>
        <div id="date_compte" class="pure-u-1-1 o-flex-grid c-red">
            <p>Date du jour : {{ "now"|format_datetime(locale='fr') }}</p>
            <p>Participant : {{ app.user.username }} </p>
        </div>
        <div id="liste">
            <h2>Filtre des sorties</h2>
            <form id="filtre" class="pure-g pure-form">
                <div id="filtre-option" class="pure-u-2-3">
                    <div class="pure-g">
                        <div class="pure-u-1-2">
                            <div class="pure-g">
                                <label for="choix-site" class="pure-u-1-2">Site : </label>
                                <select id="choix-site" class="pure-u-1-2">
                                    {% for site in sites %}
                                        <option>{{ site.nom }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="pure-g">
                                <label for="recherche-nom" class="pure-u-1-2">Le nom de la sortie contient : </label>
                                <input id="recherche-nom" type="text" class="pure-u-1-2">
                            </div>
                            <div id="recherche-date" class="pure-g">
                                <label for="date-debut" class="pure-u-1-4">Entre : </label>
                                <input type="date" id="date-debut" class="pure-u-1-4">
                                <label for="date-fin" class="pure-u-1-4"> et : </label>
                                <input type="date" id="date-fin" class="pure-u-1-4">
                            </div>
                        </div>
                        <div class="pure-u-1-2">
                            <div class="pure-u-1-1">
                                <input type="checkbox" id="checkbox-organisateur"/>
                                <label for="checkbox-organisateur">Sortie(s) dont je suis l'organisateur(trice)</label>
                            </div>
                            <div class="pure-u-1-1">
                                <input type="checkbox" id="checkbox-inscrit"/>
                                <label for="checkbox-inscrit">Sortie(s) auxquelles je suis inscrit(e)</label>
                            </div>
                            <div class="pure-u-1-1">
                                <input type="checkbox" id="checkbox-non-inscrit"/>
                                <label for="checkbox-non-inscrit">Sortie(s) auxquelles je ne suis pas inscrit(e)</label>
                            </div>
                            <div class="pure-u-1-1">
                                <input type="checkbox" id="checkbox-passee"/>
                                <label for="checkbox-passee">Sortie(s) passée(s)</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="filtre-recherche" class="pure-u-1-3">
                    <button type="submit">Rechercher</button>
                </div>
            </form>
            <div id="tableau-sortie">
                <table class="pure-table pure-u-1-1" id="home-liste-sortie" style="">
                    <thead>
                    <tr>
                        <th>Nom de la sortie</th>
                        <th>Date de la sortie</th>
                        <th>Clotûre</th>
                        <th>Inscrit/Places</th>
                        <th>Etat</th>
                        <th>Inscrit</th>
                        <th>Organisateur</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody id="lol">
                    {% set cpt = 0 %}
                    {% for sortie in sorties %}

                            <tr class="">
                                <td>{{ sortie.nom }}</td>
                                <td>{{ sortie.dateHeureDebut|date('d/m/Y h:i') }}</td>
                                <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                                <td>{{ sortie.participants|length }}/{{ sortie.nbInscriptionMax }}</td>
                                <td>{{ sortie.etat.libelle }}</td>

                                {% set find = 0 %}
                                {% if app.user.getSorties is not null %}
                                    {% for sortieUser in app.user.getSorties %}
                                        {% if sortieUser.id == sortie.id %}
                                            {% set find = 1 %}
                                        {% endif %}
                                    {% endfor %}
                                {% else %}
                                    {% set find = 0 %}
                                {% endif %}

                                {% if find == 1 %}
                                    <td>X</td>
                                {% else %}
                                    <td></td>
                                {% endif %}

                                <td>{{ sortie.organisateur.pseudo }}</td>

                                {% if sortie.organisateur.id != app.user.id %}
                                    {% if find == 1 %}
                                        <td>
                                            <a class="pure-button button-primary" href="{{ path('sortie_details', {"id" : sortie.id}) }}">Afficher</a>
                                            -
                                            <a class="pure-button button-secondary" href="{{ path('sortie_inscription', {"id" : sortie.id}) }}">Se désister</a>
                                        </td>
                                    {% else %}
                                        <td>
                                            <a class="pure-button button-primary" href="{{ path('sortie_details', {"id" : sortie.id}) }}">Afficher</a>
                                            -
                                            <a class="pure-button button-secondary" href="{{ path('sortie_inscription', {"id" : sortie.id}) }}">S'inscrire</a>
                                        </td>
                                    {% endif %}
                                {% else %}
                                    <td>
                                        <a class="pure-button button-primary" href="{{ path('sortie_modifier', {"id" : sortie.id}) }}">Modifier</a>
                                        -
                                        <a class="pure-button button-secondary" href="">Publier</a>
                                    </td>
                                {% endif %}

                            </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div id="bouton-creer-sortie">
            <a href="{{ path('sortie_creer') }}"><button>Créer une sortie</button></a>
        </div>
    </main>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}

    <div class="pure-form pure-form-aligned"
         style="	position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
    ">


    <fieldset>
        <legend>Profil d'un participant</legend>

            <div class="pure-control-group">
                <h2 class="base-titre" > pseudo : {{ participant.pseudo }}</h2>

            </div>
            <div class="pure-control-group">
                <h2 class="base-titre">Nom : {{ participant.nom }}</h2>

            </div>
            <div class="pure-control-group">
                <h2 class="base-titre">Prenom : {{ participant.prenom }}</h2>
            </div>
            <div class="pure-control-group">
                <h2 class="base-titre">Téléphone : {{ participant.telephone }}</h2>
            </div>
            <div class="pure-control-group">
                <h2 class="base-titre">Email : {{ participant.email }}</h2>
            </div>

        <div class="pure-controls">
            <button class="pure-button button-primary" onClick="window.history.back();">Retour</button>
            {% if participant.id == app.user.id %}
                <a class="pure-button button-primary" href="{{ path('participant_edit', {'id': participant.id}) }}">edit</a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a class="pure-button button-admin" href="{{ path('participant_edit', {'id': participant.id}) }}">edit</a>
                <a class="pure-button button-admin" href="{{ path('participant_index') }}">Back to List</a>
                {{ include('participant/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </fieldset>
    </div>
{% endblock %}
